{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "DOM"],
    "sourceMap": true,
    "jsx": "preserve",
    "jsxImportSource": "@nativescript-dom/solidjs-types",
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "incremental": true,
    "types": ["@nativescript-dom/core-types", "@nativescript-dom/solidjs-types"]
  },
  "exclude": ["example", "node_modules", "dist"]
}
