{
    "compilerOptions": {
      "strict": true,
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2017"],
      "sourceMap": true,
      "jsx": "preserve",
      "noEmitHelpers": true,
      "importHelpers": true,
      "baseUrl": ".",
      "types": ["@nativescript-community/solid-js"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "declaration": true,
      "incremental": true,
    }
  }
  